@model CreditCardPaymentViewModel

<form method="post" asp-action="DeletePayment">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <article class="post vt-post">
                <div class="row">
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                        <div class="caption">
                            <p><label asp-for="CardNumber">Card Number:</label></p>
                            <input asp-for="CardNumber" class="form-control" pattern="^(?:(?<visa>
                                4[0-9]{12}(?:[0-9]{3})?)|(?<mastercard>
                                    5[1-5][0-9]{14}))$" required>
                                    <br />
                            <p><label asp-for="CVV">CVV:</label></p>
                            <input asp-for="CVV" class="form-control" />
                            <br />
                            <p><label asp-for="ExpirationDate">Expiration Date:</label></p>
                            <input asp-for="ExpirationDate" class="form-control" />
                            <br />
                            <p><label asp-for="Amount">Amount:</label></p>
                            <input asp-for="Amount" class="form-control" />
                            <br />
                            <p><label asp-for="Customer.FirstName">First Name:</label></p>
                            <input asp-for="Customer.FirstName" class="form-control" />
                            <br />
                            <p><label asp-for="Customer.LastName">Last Name:</label></p>
                            <input asp-for="Customer.LastName" class="form-control" />
                            <br />
                            <p><label asp-for=Order.OrderId>Order Id:</label></p>
                            <input asp-for="Order.OrderId" class="form-control" />
                            <br />
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-55" onclick="return confirm('Are you sure you want to delete this payment?')">Delete</button>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-primary w-74">Back</a>
            </div>
        </div>
    </div>
</form>

