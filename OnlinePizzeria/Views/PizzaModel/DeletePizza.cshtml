@model PizzaViewModel
@{
    ViewData["Title"] = "Delete pizza";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">Delete Pizza</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="PizzaName" class="form-label">Pizza Name:</label>
                        <input asp-for="PizzaName" class="form-control" readonly>
                        <span asp-validation-for="PizzaName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageTitle" class="form-label">Image Title:</label>
                        <input asp-for="ImageTitle" class="form-control" readonly>
                        <span asp-validation-for="ImageTitle" class="text-danger"></span>
                    </div>

                    <input asp-for="BasePrice" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="TomatoSauce" class="form-label">Tomato Sauce</label>
                        <input asp-for="TomatoSauce" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="TomatoSauce" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cheese" class="form-label">Cheese</label>
                        <input asp-for="Cheese" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Cheese" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Peperoni" class="form-label">Pepperoni</label>
                        <input asp-for="Peperoni" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Peperoni" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mushroom" class="form-label">Mushroom</label>
                        <input asp-for="Mushroom" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Mushroom" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tuna" class="form-label">Tuna</label>
                        <input asp-for="Tuna" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Tuna" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Pineapple" class="form-label">Pineapple</label>
                        <input asp-for="Pineapple" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Pineapple" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Ham" class="form-label">Ham</label>
                        <input asp-for="Ham" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Ham" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Beef" class="form-label">Beef</label>
                        <input asp-for="Beef" type="checkbox" class="form-check-input" disabled />
                        <span asp-validation-for="Beef" class="text-danger"></span>
                    </div>

                    <input asp-for="FinalPrice" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description:</label>
                        <input asp-for="Description" class="form-control" readonly>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL:</label>
                        <input asp-for="ImageUrl" class="form-control" readonly>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <input asp-for="ImageFile" type="hidden" />

                    <input asp-for="Price" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="OrderId" class="form-label">Address:</label>
                        <select asp-for="OrderId" class="form-control" asp-items="ViewBag.Orders" disabled></select>
                    </div>

                    <div class="mb-3">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <form asp-action="DeletePizza">
                                <input type="submit" value="Confirm" onclick="return confirm('Are you sure you want to delete this pizza?')" class="btn btn-outline-danger float-end" />
                            </form>
                            <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>