@using System.Globalization;
@model PizzaViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-img-container text-center">
                    <img src="@Model.ImageUrl" alt="Pizza Image" class="card-img-top img-fluid" style="width: 50%;" />
                </div>
                <div class="card-body text-center">
                    <h2 class="card-title">@Model.PizzaName</h2>
                    <p class="card-text">Description: @Model.Description</p>
                    <p class="card-text">Price: @Model.Price.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))</p>
                    <div class="d-flex justify-content-start">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a asp-controller="Order" asp-action="AddOrder" asp-route-price="@Model.Price" class="btn btn-outline-primary justify-content-sm-end">Order Now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>